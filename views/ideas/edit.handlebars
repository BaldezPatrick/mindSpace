<section class="create-idea-container">
    <a href="/dashboard-ideas">Go back</a>
    <h1>Edit your idea</h1>
    <form action="/edit" method="post">
        <input type="hidden" name="id" value="{{idea.id}}">
        <div class="form-control">
            <label for="title">Your idea</label>
            <input type="text" name="title" placeholder="Type what's on your mind" value="{{idea.title}}" required>
        </div>

        <input type="submit" value="Edit idea">
    </form>
</section>